<div class="row">
<h1>Media Library
    <small><%= link_to 'New Medium', new_medium_path , :class => 'btn btn-primary' %></small>

</h1>


    <% @media.each do |medium| %>
    <div class="col-md-4">
    <div class="panel">
        <div class="panel-body">
        <h3><%= medium.subject %></h3>
        <small><%= medium.description %></small>
        <%= video_player(flashvars={:file => medium.video.url , :image => nil }, attributes={:id => medium.id , :name => 'media_player' , :width => '100%' , :height => '300px' , :message => 'Thanks for watching'}, params={}) %>

        <%= link_to 'Show', medium %>
        <%= link_to 'Edit', edit_medium_path(medium) %>
        <%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
    </div>
    <% end %>

</div>
